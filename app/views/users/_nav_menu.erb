<p align="center">
<table width="100%" border="0" cellspacing="0" cellpadding="10" align="center">
	<tr>
		<td><%=link_to 'Add New User', new_user_path %></td>
	<% if @user && !@user.new_record? %>
		<td><%= link_to 'View User', @user %></td>
		<td><%= link_to 'Edit User', edit_user_path(@user) %></td>
		<td><%= link_to 'Delete User', @user, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
  <% end %>
</table>
</p>
